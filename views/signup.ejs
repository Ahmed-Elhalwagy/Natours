<!DOCTYPE html>
<html>
  <head>
    <%- include('./head.ejs') %>
  </head>
  <body>
    <%- include('./__header.ejs') %>
    <main>
      <div class="login-form">
        <h2 class="heading-secondary ma-bt-lg">Create your account</h2>
        <form action="" class="form sign-up-form">
          <div class="form__group">
            <label for="name" class="form__label">Name</label>
            <input
              type="text"
              id="name"
              class="form__input"
              placeholder="Your Name"
              required
            />
          </div>
          <div class="form__group">
            <label for="email" class="form__label">Email address</label>
            <input
              type="email"
              id="email"
              class="form__input"
              placeholder="you@example.com"
              required
            />
          </div>
          <div class="form__group ma-bt-md">
            <label for="password" class="form__label">Password</label>
            <input
              type="password"
              id="password"
              class="form__input"
              placeholder="••••••••"
              required
              minlength="8"
            />
          </div>
          <div class="form__group ma-bt-md">
            <label for="password" class="form__label">Confirm Password</label>
            <input
              type="password"
              id="passwordConfirm"
              class="form__input"
              placeholder="••••••••"
              required
              minlength="8"
            />
          </div>
          <div class="form__group">
            <button class="btn btn--green">Sign Up</button>
          </div>
        </form>
      </div>
    </main>
    <%- include('./__footer.ejs') %>
  </body>
</html>
